generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  String      @id @default(cuid())
  clerkId             String      @unique // Links to Clerk's externalId
  email               String      @unique
  name                String?
  avatar              String?
  phone               String?
  onboardingCompleted Boolean     @default(false) // App-specific field
  Department          Department? @relation(fields: [departmentId], references: [id])
  departmentId        String?
  createdAt           DateTime    @default(now())
  updatedAt           DateTime    @updatedAt

  @@map("users")
}

model Department {
  id          String   @id @default(cuid())
  clerkUserId String   
  department  String   @db.VarChar(191)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  users       User[]

  @@map("departments")
}
